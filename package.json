{
  "name": "litomi",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "bun tools/checkEnvVars.ts && next dev",
    "dev:prod": "bun tools/checkEnvVars.ts && env-cmd -f .env.production next dev",
    "dev:backend": "bun run --conditions=react-server --env-file=.env.development --hot src/backend/index.ts",
    "dev:backend:prod": "bun run --conditions=react-server --env-file=.env.production --hot src/backend/index.ts",
    "build": "next build",
    "start": "next start",
    "lint": "eslint --fix",
    "analyze": "ANALYZE=true next build",
    "format": "prettier --write .",
    "type": "tsc --noEmit",
    "prepare": "husky",
    "crawl:manga:aiven": "bun --conditions=react-server cloud-run/manga-crawl/src/index.ts",
    "db:push": "bun run db:push:supabase",
    "db:push:prod": "bun run db:push:supabase:prod && bun run db:push:aiven:prod",
    "db:push:aiven": "NODE_OPTIONS='--conditions=react-server' drizzle-kit push --config=drizzle.aiven.config.ts",
    "db:push:aiven:prod": "DB_ENV=production NODE_OPTIONS='--conditions=react-server' bun run db:push:aiven",
    "db:push:d1": "NODE_OPTIONS='--conditions=react-server' drizzle-kit push --config=drizzle.d1.config.ts",
    "db:push:neon": "NODE_OPTIONS='--conditions=react-server' drizzle-kit push --config=drizzle.neon.config.ts",
    "db:push:neon:prod": "DB_ENV=production NODE_OPTIONS='--conditions=react-server' bun run db:push:neon",
    "db:push:supabase": "NODE_OPTIONS='--conditions=react-server' drizzle-kit push --config=drizzle.supabase.config.ts",
    "db:push:supabase:prod": "DB_ENV=production NODE_OPTIONS='--conditions=react-server' bun run db:push:supabase",
    "db:up": "docker compose down -v && docker compose up -d",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "test:e2e": "playwright test",
    "test:e2e:docker": "./e2e/test-e2e-docker.sh",
    "test:performance:run": "bun --conditions=react-server --env-file=.env.performance test --preload ./test/performance/setup-performance.ts --timeout=300000 ./src/backend/__tests__/*.perf.ts",
    "test:performance:setup": "docker compose -p litomi-performance -f docker-compose.performance.yml up -d --wait",
    "test:performance:cleanup": "docker compose -p litomi-performance -f docker-compose.performance.yml down -v",
    "test:performance": "bun run test:performance:cleanup; bun run test:performance:setup && bun run test:performance:run; bun run test:performance:cleanup",
    "notify": "bun --conditions=react-server cloud-run/crawl-and-notify/src/index.ts"
  },
  "dependencies": {
    "@amplitude/analytics-browser": "^2.32.1",
    "@amplitude/analytics-client-common": "2.4.11",
    "@amplitude/analytics-node": "^1.5.27",
    "@fingerprintjs/fingerprintjs": "^5.0.1",
    "@google-analytics/data": "^5.2.1",
    "@hono/zod-validator": "^0.7.5",
    "@marsidev/react-turnstile": "^1.4.0",
    "@neondatabase/serverless": "^1.0.2",
    "@next/third-parties": "16.1.1",
    "@sentry/nextjs": "10.27.0",
    "@simplewebauthn/browser": "^13.2.2",
    "@simplewebauthn/server": "^13.2.2",
    "@suspensive/react": "^3.17.0",
    "@tanstack/react-query": "^5.90.12",
    "@tanstack/react-query-devtools": "^5.91.1",
    "@upstash/redis": "^1.35.8",
    "@vercel/functions": "^3.3.4",
    "bcrypt": "^6.0.0",
    "botid": "^1.5.10",
    "caniuse-lite": "^1.0.30001760",
    "country-flag-icons": "^1.6.4",
    "dayjs": "^1.11.19",
    "drizzle-orm": "^0.44.7",
    "hono": "^4.10.8",
    "jose": "^6.1.3",
    "js-cookie": "^3.0.5",
    "jszip": "^3.10.1",
    "lucide-react": "^0.552.0",
    "ms": "^2.1.3",
    "next": "16.1.1",
    "node-html-parser": "^7.0.1",
    "otplib": "^12.0.1",
    "p-limit": "^7.2.0",
    "postgres": "^3.4.7",
    "qrcode": "^1.5.4",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-intersection-observer": "^10.0.0",
    "react-textarea-autosize": "^8.5.9",
    "react-window": "^2.2.3",
    "server-only": "^0.0.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "web-push": "^3.6.7",
    "ws": "^8.18.3",
    "zod": "^4.1.13",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@next/bundle-analyzer": "16.1.1",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcrypt": "^6.0.0",
    "@types/bun": "^1.3.4",
    "@types/country-flag-icons": "^1.2.2",
    "@types/js-cookie": "^3.0.6",
    "@types/jszip": "^3.4.1",
    "@types/ms": "^2.1.0",
    "@types/node": "^24.10.3",
    "@types/qrcode": "^1.5.6",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "@types/web-push": "^3.6.4",
    "@types/ws": "^8.18.1",
    "babel-plugin-react-compiler": "^1.0.0",
    "bun": "^1.3.4",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.8",
    "env-cmd": "^11.0.0",
    "eslint": "^9.39.2",
    "eslint-config-next": "15.3.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-perfectionist": "^4.15.1",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.5.0",
    "happy-dom": "^20.0.11",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "3.6.2",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0"
  }
}
