{
  "name": "litomi",
  "version": "1.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:cap": "next dev -H 0.0.0.0 -p 3000",
    "dev:prod": "env-cmd -f .env.production next dev",
    "kill:backend": "pids=\"$(lsof -t -iTCP:8080 -sTCP:LISTEN 2>/dev/null || true)\"; if [ -n \"$pids\" ]; then kill -KILL -- $pids; fi;",
    "dev:backend": "bun run kill:backend && bun run --conditions=react-server --env-file=.env.development --hot src/backend/index.ts",
    "dev:backend:prod": "bun run kill:backend && bun run --conditions=react-server --env-file=.env.production --hot src/backend/index.ts",
    "build": "next build",
    "build:backend": "docker build -t litomi-backend-local .",
    "start": "next start",
    "start:backend": "docker run --rm -p 8080:8080 --env-file .env.docker litomi-backend-local",
    "lint": "eslint --fix",
    "analyze": "ANALYZE=true next build --webpack",
    "format": "prettier --write .",
    "type": "tsc --noEmit",
    "prepare": "husky",
    "clean": "rm -rf .next node_modules/.cache",
    "sync": "CAPACITOR_SERVER_URL=http://10.0.2.2:3000 bun sync:android && CAPACITOR_SERVER_URL=http://localhost:3000 bun sync:ios",
    "sync:android": "bunx cap sync android",
    "sync:ios": "bunx cap sync ios",
    "sync:prod": "CAPACITOR_SERVER_URL=https://litomi.in bun sync:android && CAPACITOR_SERVER_URL=https://litomi.in bun sync:ios",
    "android": "bunx cap open android",
    "android:debug": "bun run sync:prod && cd android && ./gradlew :app:assembleDebug && cd .. && mkdir -p dist/android && cp android/app/build/outputs/apk/debug/app-debug.apk dist/android/litomi-debug.apk && shasum -a 256 dist/android/litomi-debug.apk > dist/android/litomi-debug.apk.sha256",
    "android:release": "bun run sync:prod && cd android && ./gradlew :app:assembleRelease && cd .. && mkdir -p dist/android && cp android/app/build/outputs/apk/release/app-release.apk dist/android/litomi.apk && shasum -a 256 dist/android/litomi.apk > dist/android/litomi.apk.sha256",
    "ios": "bunx cap open ios",
    "ios:testflight": "bun run sync:prod && bun run ios",
    "crawl:manga:aiven": "bun --conditions=react-server cloud-run/manga-crawl/src/index.ts",
    "db:push": "bun run db:push:supabase",
    "db:push:prod": "bun run db:push:supabase:prod && bun run db:push:aiven:prod",
    "db:push:aiven": "NODE_OPTIONS='--conditions=react-server' drizzle-kit push --config=drizzle.aiven.config.ts",
    "db:push:aiven:prod": "DB_ENV=production NODE_OPTIONS='--conditions=react-server' bun run db:push:aiven",
    "db:push:d1": "NODE_OPTIONS='--conditions=react-server' drizzle-kit push --config=drizzle.d1.config.ts",
    "db:push:neon": "NODE_OPTIONS='--conditions=react-server' drizzle-kit push --config=drizzle.neon.config.ts",
    "db:push:neon:prod": "DB_ENV=production NODE_OPTIONS='--conditions=react-server' bun run db:push:neon",
    "db:push:supabase": "NODE_OPTIONS='--conditions=react-server' drizzle-kit push --config=drizzle.supabase.config.ts",
    "db:push:supabase:prod": "DB_ENV=production NODE_OPTIONS='--conditions=react-server' bun run db:push:supabase",
    "db:up": "docker compose down -v && docker compose up -d",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "notify": "bun --conditions=react-server cloud-run/crawl-and-notify/src/index.ts"
  },
  "dependencies": {
    "@amplitude/analytics-browser": "^2.33.4",
    "@amplitude/analytics-client-common": "2.4.22",
    "@amplitude/analytics-node": "^1.5.32",
    "@capacitor/app": "^8.0.0",
    "@capacitor/core": "^8.0.1",
    "@fingerprintjs/fingerprintjs": "^5.0.1",
    "@google-analytics/data": "^5.2.1",
    "@hono/zod-validator": "^0.7.6",
    "@marsidev/react-turnstile": "^1.4.1",
    "@mlc-ai/web-llm": "^0.2.80",
    "@next/third-parties": "16.1.3",
    "@sentry/nextjs": "10.34.0",
    "@simplewebauthn/browser": "^13.2.2",
    "@simplewebauthn/server": "^13.2.2",
    "@suspensive/react": "^3.18.0",
    "@t3-oss/env-core": "^0.13.10",
    "@t3-oss/env-nextjs": "^0.13.10",
    "@tanstack/react-query": "^5.90.19",
    "@tanstack/react-query-devtools": "^5.91.2",
    "@upstash/redis": "^1.36.1",
    "@vercel/functions": "^3.3.6",
    "baseline-browser-mapping": "^2.9.15",
    "bcryptjs": "^3.0.3",
    "caniuse-lite": "^1.0.30001764",
    "country-flag-icons": "^1.6.4",
    "dayjs": "^1.11.19",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.4",
    "jose": "^6.1.3",
    "js-cookie": "^3.0.5",
    "jszip": "^3.10.1",
    "lucide-react": "^0.562.0",
    "ms": "^2.1.3",
    "next": "16.1.3",
    "node-html-parser": "^7.0.2",
    "otplib": "^13.1.1",
    "p-limit": "^7.2.0",
    "postgres": "^3.4.8",
    "qrcode": "^1.5.4",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-intersection-observer": "^10.0.2",
    "react-textarea-autosize": "^8.5.9",
    "react-window": "^2.2.5",
    "server-only": "^0.0.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "web-push": "^3.6.7",
    "ws": "^8.19.0",
    "zod": "^4.3.5",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@capacitor/android": "^8.0.1",
    "@capacitor/cli": "^8.0.1",
    "@capacitor/ios": "^8.0.1",
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@next/bundle-analyzer": "16.1.3",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/bun": "^1.3.6",
    "@types/country-flag-icons": "^1.2.2",
    "@types/js-cookie": "^3.0.6",
    "@types/jszip": "^3.4.1",
    "@types/ms": "^2.1.0",
    "@types/node": "^25.0.9",
    "@types/qrcode": "^1.5.6",
    "@types/react": "19.2.8",
    "@types/react-dom": "19.2.3",
    "@types/web-push": "^3.6.4",
    "@types/ws": "^8.18.1",
    "@webgpu/types": "^0.1.69",
    "babel-plugin-react-compiler": "^1.0.0",
    "bun": "^1.3.6",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.8",
    "env-cmd": "^11.0.0",
    "eslint": "^9.39.2",
    "eslint-config-next": "16.1.3",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-perfectionist": "^5.3.1",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^17.0.0",
    "happy-dom": "^20.3.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "3.8.0",
    "schema-dts": "^1.1.5",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0",
    "wrangler": "^4.60.0"
  }
}
